{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "**/dist/**",
      "**/coverage/**",
      "node_modules/",
      ".husky/",
      ".github/",
      ".turbo/",
      "**/.netlify/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "json": {
    "formatter": {
      "lineWidth": 1
    }
  }
}
